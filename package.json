{
  "name": "worker-typescript-template",
  "version": "1.0.0",
  "description": "CloudFlare Worker TypeScript template",
  "author": "therealklanni",
  "license": "MIT OR Apache-2.0",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build:dev": "NODE_ENV=development npm run build",
    "format": "pretty-quick --staged --verbose --pattern '**/*.{json,md,y{a}ml}'",
    "test": "jest",
    "transpile": "tsc --project ./test"
  },
  "husky": {
    "pre-commit": "npm run format && lint-staged",
    "pre-push": "npm test"
  },
  "lint-staged": {
    "*.[tj]s": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@therealklanni/eslint-config/jest",
      "@therealklanni/eslint-config/node"
    ],
    "ignorePatterns": [
      "dist/**/*"
    ],
    "overrides": [
      {
        "files": "**/*.js",
        "extends": [
          "@therealklanni/eslint-config/prettier"
        ]
      },
      {
        "files": "**/*.ts",
        "extends": [
          "@therealklanni/eslint-config/prettier-typescript"
        ]
      },
      {
        "files": "webpack.config.js",
        "rules": {
          "no-process-env": "off"
        }
      }
    ]
  },
  "prettier": "@therealklanni/prettier-config",
  "devDependencies": {
    "@cloudflare/workers-types": "^2.0.0",
    "@therealklanni/eslint-config": "^1.0.0-2",
    "@therealklanni/prettier-config": "^0.1.0",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "ts-jest": "^26.3.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
